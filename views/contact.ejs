<% include ./partials/header %>
      <h1 style="text-align: center">Contact Me</h1>
      <div class ="col-md-12 linebreak"></div>
      <form action="/contact" method="post">
          <div class="row">
            <!-- social buttons -->
            <div class="col-12 text-center mb-4">
              <a class="social_links_icon" href="https://www.linkedin.com/in/ericfallone/"><i class="fab fa-linkedin fa-2x"></i></a>
              <a class="social_links_icon" href="https://github.com/Eric-Fallone"><i class="fab fa-github fa-2x"></i></a>
            </div>
            <!-- First Name -->
            <div class="col-3 col-md-3 text-right mb-4">
              <label for="first">First:</label>
            </div>
            <div class="col-9 col-md-3  mb-4">
              <input class="form-control" id="first" type="text" placeholder="" name ="first">
            </div>
            <!-- Last Name -->
            <div class="col-3 col-md-1 text-right mb-4">
              <label for="last">Last:</label>
            </div>
            <div class="col-8 col-md-4 mb-3">
              <input class="form-control" id="last" type="text" placeholder="" name ="last">
            </div>
            <div class="col-1 col-md-1  mb-1">
            </div>
            <!-- Email  -->
            <div class="col-3 text-right mb-4">
              <label for="email">Email:</label>
            </div>
            <div class="col-8 mb-3">
              <input class="form-control" id="email" type="text" placeholder="" name ="email">
            </div>
            <div class="col-1 col-md-1  mb-1">
            </div>
            <!-- Email msg -->
            <div class="col-3 text-right mb-4">
              <label for="emailmsg">Message:</label>
            </div>
            <div class="col-8 mb-3">
              <textarea class="form-control" id="emailmsg" rows="4" name ="emailmsg"></textarea>
            </div>
            <div class="col-1 col-md-1  mb-1">
            </div>
            <!-- Telephone -->
            <div class="col-3 text-right mb-4">
              <label for="tele">Telephone:</label>
            </div>
            <div class="col-8 mb-3">
              <input class="form-control" id="tele" type="text" placeholder="" name ="tele">
            </div>
            <div class="col-1 col-md-1  mb-1">
            </div>
            <!-- Company-->
            <div class="col-3 text-right mb-4">
              <label for="company">Company:</label>
            </div>
            <div class="col-8 mb-3">
              <input class="form-control" id="company" type="text" placeholder="<%= %>" name ="company">
            </div>
            <div class="col-1 col-md-1  mb-1">
            </div>
            <!-- button-->
            <div class="col-12 text-center mb-4">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
      </form>
<% include ./partials/footer %>
